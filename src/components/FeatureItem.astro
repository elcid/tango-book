---
export interface Props {
    title: string;
    description: string;
    youtubeLink?: string; // New optional prop for YouTube link
}

const { title, description, youtubeLink } = Astro.props;
---

<div class="bg-gray-50 p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
    <h3 class="text-lg font-semibold mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>

    {youtubeLink && (
            <div class="mt-4">
                <a href={youtubeLink} class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer">
                    Watch on YouTube
                </a>
                <p class="text-sm text-gray-500 mt-1">Video demonstration</p>
            </div>
    )}
</div>